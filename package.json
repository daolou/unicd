{
  "name": "unicode",
  "version": "1.0.0",
  "description": "en/de unicode(unicode 与 utf 字符串转换)",
  "source": "./src/index.ts",
  "main": "./dist/index.js",
  "exports": "./dist/index.modern.js",
  "module": "./dist/index.module.js",
  "umd:main": "./dist/index.umd.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "test": "jest --coverage",
    "codecov": "codecov",
    "clear": "rimraf dist",
    "microbundle": "microbundle build --globals unicode=Unicode --name unicode --tsconfig ./tsconfig.build.json",
    "compile": "npm run clear && npm run microbundle",
    "check:ts": "tsc --noEmit --pretty",
    "check:ts:watch": "npm run check:ts -- --watch",
    "release": "standard-version"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged && npm test",
      "prepare-commit-msg": "devmoji -e --lint",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "lint-staged": {
    "package.json": [
      "sort-package-json"
    ],
    "packages/**/*.{js,jsx,tsx,ts,less,md,json}": [
      "prettier --write"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/daolou/unicode.git"
  },
  "keywords": [
    "unicode",
    "enUnicode",
    "deUnicode",
    "utf",
    "js",
    "javascript"
  ],
  "author": "jiangzhiguo2010",
  "license": "MIT",
  "devDependencies": {
    "@commitlint/cli": "^12.0.0",
    "@commitlint/config-conventional": "^12.0.0",
    "@types/jest": "^26.0.22",
    "@typescript-eslint/eslint-plugin": "^4.15.2",
    "@typescript-eslint/parser": "^4.15.2",
    "codecov": "^3.8.1",
    "devmoji": "^2.2.0",
    "eslint": "^7.20.0",
    "eslint-config-alloy": "^3.10.0",
    "husky": "^5.1.1",
    "jest": "^26.6.3",
    "lint-staged": "^10.5.4",
    "microbundle": "^0.13.0",
    "prettier": "^2.2.1",
    "rimraf": "^3.0.2",
    "sort-package-json": "^1.49.0",
    "standard-version": "^9.1.1",
    "ts-jest": "^26.5.4",
    "typescript": "^4.2.2"
  },
  "bugs": {
    "url": "https://github.com/daolou/unicode/issues"
  },
  "homepage": "https://github.com/daolou/unicode#readme",
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org"
  }
}
