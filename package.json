{
  "name": "unicd",
  "version": "1.0.2",
  "description": "en/de unicode(unicode 与 utf 字符串转换)",
  "keywords": [
    "unicode",
    "enUnicode",
    "deUnicode",
    "utf",
    "js",
    "javascript"
  ],
  "homepage": "https://github.com/daolou/unicd#readme",
  "bugs": {
    "url": "https://github.com/daolou/unicd/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/daolou/unicd.git"
  },
  "license": "MIT",
  "author": "jiangzhiguo2010",
  "exports": "./dist/index.modern.js",
  "main": "./dist/index.js",
  "umd:main": "./dist/index.umd.js",
  "module": "./dist/index.module.js",
  "source": "./src/index.ts",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "prepare": "husky install",
    "test": "jest --coverage",
    "codecov": "codecov",
    "clear": "rimraf dist",
    "microbundle": "microbundle build --globals unicd=Unicd --name unicd --tsconfig ./tsconfig.build.json",
    "compile": "npm run clear && npm run microbundle",
    "check:ts": "tsc --noEmit --pretty",
    "check:ts:watch": "npm run check:ts -- --watch",
    "release": "standard-version",
    "np": "./scripts/publish.sh"
  },
  "lint-staged": {
    "package.json": [
      "sort-package-json"
    ],
    "packages/**/*.{js,jsx,tsx,ts,less,md,json}": [
      "prettier --write"
    ]
  },
  "devDependencies": {
    "@commitlint/cli": "^12.0.0",
    "@commitlint/config-conventional": "^12.0.0",
    "@types/jest": "^26.0.22",
    "@typescript-eslint/eslint-plugin": "^4.15.2",
    "@typescript-eslint/parser": "^4.15.2",
    "codecov": "^3.8.1",
    "devmoji": "^2.2.0",
    "eslint": "^7.20.0",
    "eslint-config-alloy": "^3.10.0",
    "husky": "^6.0.0",
    "jest": "^26.6.3",
    "lint-staged": "^10.5.4",
    "microbundle": "^0.13.0",
    "prettier": "^2.2.1",
    "rimraf": "^3.0.2",
    "sort-package-json": "^1.49.0",
    "standard-version": "^9.1.1",
    "ts-jest": "^26.5.4",
    "typescript": "^4.2.2"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org"
  }
}
